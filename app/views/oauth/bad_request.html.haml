.user-auth.container
  .col-xs-12.col-sm-8.col-sm-offset-2.col-md-6.col-md-offset-3
    .panel.panel-default.oauth-authorize
      .panel-heading.text-center
        %span.miesh-logo
          =image_tag 'miesh-logo-2.png'
        %span.cenit-hub{style: 'color: black;'}= 'Miesh IO'
      .panel-body
        .col-xs-12.actions.bad
          .action-title
            %i.fa.fa-times
            %span
              = 'Bad request'
          .action-description
            %ul
              - @errors.each do |error|
                %li
                  = error
